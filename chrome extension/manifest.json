{
    "manifest_version": 2,
    "name": "Blood Pressure Buddy",
    "description":"A blood pressure tracker for seniors.",
    "version": "0.1",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_title": "Blood Pressure Buddy",
      "default_icon": "extension_logo.png"
    },
      "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+B",
            "mac": "MacCtrl+Shift+B"
          }
        }
      },
      "permissions": [
        "tabs"
      ]
  }